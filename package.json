{
  "name": "gitattributes-nbn",
  "displayName": "gitattributes",
  "description": "A simple extension that lets you pull .gitattributes files from https://github.com/alexkaratarakis/gitattributes and create a combined .gitattributes file.",
  "version": "0.4.1",
  "publisher": "thakyZ",
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#008080"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thakyZ/vscode-gitattributes"
  },
  "bugs": {
    "url": "https://github.com/thakyZ/vscode-gitattributes/issues"
  },
  "homepage": "https://github.com/thakyZ/vscode-gitattributes",
  "license": "MIT",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onCommand:addgitattributes"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "addgitattributes",
        "title": "Add gitattributes"
      }
    ],
    "configuration": {
      "title": "gitattributes extension configuration",
      "properties": {
        "gitattributes.cacheExpirationInterval": {
          "type": "integer",
          "default": "86400",
          "description": "Number of seconds the list of `.gitattributes` files retrieved from GitHub will be cached"
        },
        "gitattributes.token": {
          "type": "string",
          "default": "",
          "description": "Token for api access."
        }
      }
    },
    "languages": [
      {
        "id": "gitattributes",
        "aliases": [
          "Gitattributes"
        ],
        "filenames": [
          ".gitattributes"
        ],
        "configuration": "./gitattributes.configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "gitattributes",
        "scopeName": "text.gitattributes",
        "path": "./syntaxes/gitattributes.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.78.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4",
    "ts-loader": "^9.4.2",
    "webpack": "^5.81.0",
    "webpack-cli": "^5.0.2",
    "@vscode/test-electron": "^2.3.0",
    "@octokit/openapi-types": "^17.2.0",
    "@octokit/rest": "^19.0.8"
  }
}
